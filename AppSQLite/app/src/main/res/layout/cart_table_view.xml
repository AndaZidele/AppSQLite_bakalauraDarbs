<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_root_view"
    android:padding="12dp"
    android:backgroundTint="#00193443"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="#00193443"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#E5000202"
            android:layout_width="330dp"
            android:layout_height="120dp">

            <TextView
                android:id="@+id/cart_product_name"
                android:text="Name"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingRight="50dp"
                android:gravity="center"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/cart_product_price"
                android:text="Price"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="22dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_height="60dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_minuss"
                    android:layout_width="50dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="-15dp"
                    android:background="#EEE333"
                    android:textColor="#050000"
                    android:textSize="40dp"
                    android:paddingTop="-40dp"
                    android:text="-"
                    android:textStyle="bold"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/cart_product_amount"
                    android:text="2"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="-20dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="46dp"
                    android:layout_height="22dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_plus"
                    android:layout_width="50dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="-15dp"
                    android:background="#EEE333"
                    android:textColor="#050000"
                    android:textSize="30dp"
                    android:paddingTop="-40dp"
                    android:text="+"
                    android:textStyle="bold"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>





        </LinearLayout>
        <!--        <ImageView-->
        <!--            android:background="#2B76BD"-->
        <!--            android:layout_width="120dp"-->
        <!--            android:layout_marginLeft="2dp"-->
        <!--            android:layout_height="120dp"/>-->


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_delete_product"
        android:layout_width="35dp"
        android:layout_height="43dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#CE040000"
        android:drawableLeft="@drawable/ic_close_menu"
        android:paddingLeft="5dp"
        android:text="x"
        android:textColor="#510505"
        app:cornerRadius="100dp"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.cardview.widget.CardView>