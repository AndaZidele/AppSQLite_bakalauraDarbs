<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneProductActivity"
    android:background="@drawable/gb__"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0E000205"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#000000">

                <TextView
                    android:id="@+id/oneProductToHome"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_home"/>

            </LinearLayout>

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                android:paddingBottom="0dp"
                android:paddingTop="20dp"
                android:background="#000000"
                android:fontFamily="serif"
                android:text="Product Name"
                android:gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>


        <ImageView
            android:id="@+id/productImage"
            android:layout_width="wrap_content"
            android:minWidth="270dp"
            android:background="#7C000000"
            android:layout_marginBottom="15dp"
            android:layout_height="270dp"/>
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:textSize="25sp"
            android:background="#E1000000"
            android:fontFamily="serif"
            android:text="Price: "
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:textColor="#F3F2F5"
            android:textColorHint="#8FB0CBE4"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddToCart"
            android:layout_width="250dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#000000"
            android:fontFamily="serif"
            android:text="Add To Cart"
            android:textColor="#E7EDF0"
            android:paddingTop="8dp"
            android:textSize="26sp"
            android:textStyle="bold"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#9B000000"
            android:gravity="center">

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Description..."
                android:padding="10dp"
                android:textColor="#EAFFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>